<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/baise"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/baise"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/appoint_master_image"
    android:src="@drawable/use_iv"
    android:layout_width="60dp"
    android:layout_height="60dp" />
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/appoint_master_name"

            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/blackaa"
            android:text="xxx专家"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/appoint_master_time"
            android:textSize="15sp"
            android:text="2018-11-12:12:14"
            android:textColor="@color/blackaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/appoint_master_statue"
            android:textColor="@color/blackaa"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:text="预约中"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/appoint_master_detail_bn"
        android:text="详情"
        android:textColor="@color/douyucheng"
        android:background="@drawable/group_bn"
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:layout_height="30dp" />
    </LinearLayout>
</LinearLayout>
