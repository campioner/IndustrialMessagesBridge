<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baise"
    android:orientation="vertical"
    tools:context=".activity.SendPostsActivity">
    <com.example.administrator.industrialmessagesbridge.myView.SimpleToolbar
        android:id="@+id/simple_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/baise"
        android:fitsSystemWindows="true"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/arrow_right"
            android:id="@+id/message_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:visibility="visible"/>
        <TextView
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:text="发帖"
            android:textColor="@color/blackaa"
            android:layout_marginBottom="10dp"
            android:id="@+id/mTxtMiddleTitle"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            ></TextView>
        <TextView
            android:id="@+id/txt_right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/blackaa"
            android:text="发布"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:visibility="visible"/>
        </LinearLayout>
    </com.example.administrator.industrialmessagesbridge.myView.SimpleToolbar>
    <EditText
        android:id="@+id/posts_title"
        android:hint="加个标题吧"
        android:background="@color/baise"
        android:maxLength="30"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/posts_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/baise"
        android:gravity="start"
        android:hint="尽情发挥你的才智吧"
        android:maxLength="200" />
<ImageButton
    android:layout_marginLeft="10dp"
    android:id="@+id/posts_add_photo"
    android:scaleType="centerInside"
    android:src="@drawable/add_photo"
    android:background="#00000000"
    android:layout_width="80dp"
    android:layout_height="80dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/posts_photo1"
        android:layout_marginLeft="10dp"

        android:layout_width="80dp"
        android:layout_height="80dp" />
        <ImageView
            android:id="@+id/posts_photo2"
            android:layout_marginLeft="10dp"

            android:layout_width="80dp"
            android:layout_height="80dp" />
        <ImageView
            android:id="@+id/posts_photo3"
            android:layout_marginLeft="10dp"

            android:layout_width="80dp"
            android:layout_height="80dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></LinearLayout>
    <TextView
        android:id="@+id/set_posts_title"
        android:background="@drawable/edittext_ll"
        android:layout_marginBottom="10dp"
        android:textColor="@color/blackaa"
        android:text="设置标题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>