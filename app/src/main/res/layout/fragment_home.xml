<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.industrialmessagesbridge.myView.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/home_scroll_view"
    android:background="@color/baise"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    tools:context=".fragment.HomeFragment">
        <RelativeLayout
            android:id="@+id/move_rl"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/barcolor"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<android.support.v7.widget.RecyclerView
    android:id="@+id/hot_label_rv"
android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    <!-- TODO: Update blank fragment layout -->

        <com.example.administrator.industrialmessagesbridge.myView.Banner1
            android:id="@+id/banner_vp"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </com.example.administrator.industrialmessagesbridge.myView.Banner1>

<android.support.v7.widget.RecyclerView
    android:background="@color/baise"
    android:layout_marginTop="10dp"
  android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/homeFragment_founction"
    android:layout_width="match_parent"
    android:layout_height="145dp"></android.support.v7.widget.RecyclerView>
<View
    android:background="@color/home_divice"
    android:layout_width="match_parent"
    android:layout_height="8dp"></View>

        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:src="@drawable/konwn_user"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textColor="@color/blackaa"
                android:text="知名用户推荐"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recommand_konwn_user_rv"
            android:layout_width="match_parent"
            android:layout_height="120dp"></android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/bnlan"
            android:textSize="18sp"
            android:text="更多排名..."
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
       <View
           android:background="@color/home_divice"
           android:layout_width="match_parent"
           android:layout_height="10dp"></View>
        <net.lucode.hackware.magicindicator.MagicIndicator
            android:background="@color/baise"
            android:id="@+id/magic_indicatorhh"
            android:layout_width="match_parent"
            android:tag="sticky"
            android:layout_height="40dp" />
        <com.example.administrator.industrialmessagesbridge.myView.InsideViewPager
            android:id="@+id/home_vp1"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </com.example.administrator.industrialmessagesbridge.myView.InsideViewPager>

    </LinearLayout>
        </RelativeLayout>

</com.example.administrator.industrialmessagesbridge.myView.StickyScrollView>