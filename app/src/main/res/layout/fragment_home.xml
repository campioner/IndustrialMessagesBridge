<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    tools:context=".fragment.HomeFragment">

    <com.example.administrator.industrialmessagesbridge.myView.MyScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/move_rl"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- TODO: Update blank fragment layout -->
    <com.youth.banner.Banner
        android:id="@+id/maser_banner"
        android:layout_width="match_parent"
        android:layout_height="160dp"

        />

<android.support.v7.widget.RecyclerView
    android:background="@drawable/llinearlayout_shap"
    android:layout_marginTop="10dp"
  android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/homeFragment_founction"
    android:layout_width="match_parent"
    android:layout_height="145dp"></android.support.v7.widget.RecyclerView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            >
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:background="@drawable/llinearlayout_shap"
        android:id="@+id/homeFragment_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </LinearLayout>
            <com.example.administrator.industrialmessagesbridge.myView.MyImageButton
                android:background="#00000000"
                android:src="@drawable/add_bottom"
                android:layout_alignParentRight="true"
                android:id="@+id/home_send_bn"
                android:scaleType="centerInside"
                android:layout_width="40dp"
                android:layout_height="40dp"></com.example.administrator.industrialmessagesbridge.myView.MyImageButton>
        </RelativeLayout>
    </com.example.administrator.industrialmessagesbridge.myView.MyScrollView>
</LinearLayout>