<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.industrialmessagesbridge.myView.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/home_scroll_view"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    tools:context=".fragment.HomeFragment">
        <RelativeLayout
            android:id="@+id/move_rl"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/barcolor"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<android.support.v7.widget.RecyclerView
    android:id="@+id/hot_label_rv"
android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    <!-- TODO: Update blank fragment layout -->

        <com.example.administrator.industrialmessagesbridge.myView.Banner1
            android:id="@+id/banner_vp"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </com.example.administrator.industrialmessagesbridge.myView.Banner1>

<android.support.v7.widget.RecyclerView
    android:layout_marginTop="10dp"
  android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/homeFragment_founction"
    android:layout_width="match_parent"
    android:layout_height="145dp"></android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="#FFFDD1D9"
                android:layout_marginLeft="15dp"
            android:layout_weight="2"
                android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"></LinearLayout>
            <LinearLayout
                android:background="#FFBADFCD"
                android:orientation="vertical"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="10"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:background="#FFFDD1D9"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:background="#FFBADFCD"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:background="#FFFDD1D9"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:background="@color/baise"
            android:id="@+id/magic_indicatorhh"
            android:layout_width="match_parent"
            android:tag="sticky"
            android:layout_height="40dp" />
        <com.example.administrator.industrialmessagesbridge.myView.InsideViewPager
            android:id="@+id/home_vp1"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </com.example.administrator.industrialmessagesbridge.myView.InsideViewPager>

    </LinearLayout>
        </RelativeLayout>

</com.example.administrator.industrialmessagesbridge.myView.StickyScrollView>