<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BecomeMaster">
    <LinearLayout
        android:orientation="horizontal"
        android:background="#FF138FEA"
        android:layout_width="match_parent"
        android:layout_height="40dp">
<ImageButton
    android:layout_gravity="center_vertical"
    android:src="@drawable/arrow_right"
    android:scaleType="centerInside"
    android:background="#00000000"
    android:layout_width="25dp"
    android:layout_height="25dp" />
        <TextView
            android:id="@+id/becomeMaster_titile"
            android:textColor="@color/baise"
            android:textSize="14sp"
            android:text="资料完善"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF138FEA"
        android:orientation="horizontal">
<TextView
    android:textColor="@color/baise"
    android:layout_gravity="center"
    android:text="认证步骤"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@color/baise"
            android:layout_width="1dp"
            android:layout_height="35dp"></View>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_weight="1"
           android:layout_width="wrap_content"
           android:layout_height="match_parent">
            <com.example.administrator.industrialmessagesbridge.myView.RoundCircle
                android:id="@+id/becomeMaster_roundView1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                app:isblack="true"
                app:textContent="1"></com.example.administrator.industrialmessagesbridge.myView.RoundCircle>



        <View

            android:id="@+id/becomeMaster_view2"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#FF086BDB"></View>

        <com.example.administrator.industrialmessagesbridge.myView.RoundCircle
            android:id="@+id/becomeMaster_roundView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            app:isblack="true"
            app:textContent="2"></com.example.administrator.industrialmessagesbridge.myView.RoundCircle>


        <View
            android:id="@+id/becomeMaster_view3"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#FF086BDB"></View>

        <com.example.administrator.industrialmessagesbridge.myView.RoundCircle
            android:id="@+id/becomeMaster_roundView3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            app:isblack="true"
            app:textContent="3"></com.example.administrator.industrialmessagesbridge.myView.RoundCircle>

        <View

            android:id="@+id/becomeMaster_view4"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#FF086BDB"></View>



       </LinearLayout>
        <ImageView
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:background="@drawable/time"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <LinearLayout
        android:background="#FF138FEA"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_marginLeft="60dp"
            android:textColor="@color/baise"
            android:text="资料完善"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="30dp"
            android:textColor="@color/baise"
            android:text="从事方向"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="@color/baise"
            android:text="个人资料"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/baise"
            android:text="等待审核"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/becomeMaster_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>
</LinearLayout>