<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SettingPersonInfo">
    <com.example.administrator.industrialmessagesbridge.myView.SimpleToolbar
        android:id="@+id/simple_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/barcolor"
        android:fitsSystemWindows="true"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">
    <ImageView
        android:background="@drawable/arrow_right"
        android:id="@+id/message_bar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:visibility="visible"/>
    <TextView
        android:layout_marginRight="20dp"
       android:text="签名设置"
        android:textColor="@color/baise"
        android:layout_marginBottom="10dp"
        android:id="@+id/mTxtMiddleTitle"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        ></TextView>
    </com.example.administrator.industrialmessagesbridge.myView.SimpleToolbar>
    <TextView
        android:background="#FFF0EFDF"
        android:layout_gravity="start"
        android:textColor="@color/blackaa"
        android:text="可以输入100字"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<LinearLayout
    android:background="#FFF0EFDF"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="220dp">

  <LinearLayout
      android:layout_weight="1"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"></LinearLayout>
    <EditText
        android:id="@+id/person_content"
        android:gravity="start"
        android:maxLength="100"
       android:padding="10dp"
        android:background="@drawable/person_qianming_ll"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="9"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"></LinearLayout>
</LinearLayout>

</LinearLayout>