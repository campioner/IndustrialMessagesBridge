<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout
    android:background="@color/baise"
    android:padding="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <ImageView
        android:id="@+id/group_image"
        android:src="@drawable/defaulthhhh"
        android:layout_width="55dp"
        android:layout_height="55dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/group_name"
            android:textColor="@color/blackaa"
            android:text="鱼吧"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:text="帖子: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/group_count"
                android:text="155555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></View>
            <TextView
                android:text="粉丝:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/group_fensi_count"
                android:layout_marginRight="10dp"
                android:text="1444444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></View>
        </LinearLayout>
        <TextView
            android:id="@+id/group_bref"
            android:text="简介"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
<Button
    android:id="@+id/group_bn"
    android:textColor="#FFC8C2C2"
    android:text="已加入"
    android:background="@drawable/group_bn"
    android:layout_gravity="center"
    android:layout_width="60dp"
    android:layout_height="35dp" ></Button>
</LinearLayout>
    <View
        android:background="@color/home_divice"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</LinearLayout>
