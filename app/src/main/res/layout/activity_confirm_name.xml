<?xml version="1.0" encoding="utf-8"?>
<com.gc.materialdesign.views.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ConfirmName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.administrator.industrialmessagesbridge.myView.SimpleToolbar
            android:id="@+id/simple_toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/barcolor"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <ImageView
                android:id="@+id/message_bar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/arrow_right"
                android:visibility="visible" />

            <TextView
                android:id="@+id/mTxtMiddleTitle"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="个人实名"
                android:textColor="@color/baise"></TextView>
        </com.example.administrator.industrialmessagesbridge.myView.SimpleToolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/baise">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="输入以下信息进行实名，实名后不可修改"
                android:textColor="@color/blackaa" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="10dp"
            android:background="@drawable/confirm_name_ll"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="请输入真实姓名:"
                        android:textSize="15sp" />
                </LinearLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="#FFEFEFEE" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="110dp"

                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:text="身份证号:"
                        android:textSize="15sp" />
                </LinearLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="#FFEFEFEE" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="上传照片:" />

                <ImageButton
                    android:id="@+id/select_user_photo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#00000000"
                    android:scaleType="centerInside"
                    android:src="@drawable/add_photo" />
                <ImageButton
                    android:id="@+id/select_user_photo2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#00000000"
                    android:scaleType="centerInside"
                    android:src="@drawable/add_photo" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="照片要求:需要本人手持身份证正面照片，照片清晰，否则影响审核" />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/confirm_name_bn"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:text="提交" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="实名认证:"
            android:textColor="@color/blackaa"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/home_divice"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="1.实名认证是什么?"
            android:textColor="@color/blackaa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="实名认证是指用户输入自己的真实姓名和身份证号码，系统会验证用户所填信息是否真实如果不真实，则不通过."
            android:textColor="@color/blackaa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="2.如何实名认证?"
            android:textColor="@color/blackaa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="输入真实姓名、身份证号码2个信息必须是关联的，真实有效的一套信息），即可进行实名认证。"
            android:textColor="@color/blackaa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="3.实名认证有什么好处?"
            android:textColor="@color/blackaa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="在进行业务对接时更有可信度，也是用户使用app所必需的步骤"
            android:textColor="@color/blackaa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="4.怎么知道实名是否通过?"
            android:textColor="@color/blackaa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="系统会自动给您发短信，第一时间通知结果"
            android:textColor="@color/blackaa" />
    </LinearLayout>
</com.gc.materialdesign.views.ScrollView>