<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.groupFragment.RecommandGroupFragment">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recommand_yihui_rv"
        android:background="@color/baise"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
<LinearLayout
    android:layout_marginTop="5dp"
    android:background="@color/baise"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:scaleType="centerInside"
            android:background="#00000000"
            android:src="@drawable/hot"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView

            android:layout_marginLeft="10dp"
            android:textColor="@color/blackaa"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="热门话题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_left_black"
            android:background="#00000000"
            android:layout_width="15dp"
            android:layout_height="15dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:background="@color/topiccolorone"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
           <TextView
               android:layout_centerInParent="true"
               android:text="#热门话题1#"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/topiccolortow"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerInParent="true"
                android:text="#热门话题2#"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:background="@color/topiccolorthree"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerInParent="true"
                android:text="#热门话题3#"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/topiccolorfour"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerInParent="true"
                android:text="#热门话题4#"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        >
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/recommand_yihui_bottom_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>