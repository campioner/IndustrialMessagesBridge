<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/topic_content_ll"
    android:layout_height="match_parent"
    tools:context=".fragment.TopicContentFragment">

    <!-- TODO: Update blank fragment layout -->

    <AutoCompleteTextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/llinearlayout_shap"
        android:hint="搜索话题"
        android:id="@+id/topic_context_at"
        android:layout_width="match_parent"
        android:layout_height="35dp"
     ></AutoCompleteTextView>
    <android.support.v7.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/topic_content_hot_rv"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"></android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/topic_content_lable"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>