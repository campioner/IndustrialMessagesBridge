<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageButton
    android:id="@+id/back"
    android:scaleType="centerInside"
    android:src="@drawable/across"
    android:background="#00000000"
    android:layout_width="20dp"
    android:layout_height="20dp" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></LinearLayout>
      <TextView
          android:id="@+id/login_method_tv"
          android:textColor="#FF3A4DC8"
        android:layout_marginRight="15dp"
        android:text="账号密码登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/login_text_tv"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:textColor="#FF000000"
        android:text="手机验证码登录"
        android:textSize="25sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/login_phone_number_ll"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/login_phone_number"
        android:hint="账号"
        android:inputType="phone"
        android:background="#00000000"
       android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
        <View
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="#FFE6E6E9"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_password_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/user_password"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:hint="密码"
                android:background="#00000000"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="45dp" />

        </LinearLayout>
        <View
            android:id="@+id/login_divice"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="#FFE6E6E9"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
    </LinearLayout>

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/login_login_bn"
            android:layout_marginTop="25dp"
            android:textColor="#FFFFFFFF"
            android:text="登录"
            android:background="#FF4357C8"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <LinearLayout
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginLeft="10dp"
                android:background="#FFE6E6E9"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"></View>
            <TextView
                android:text="使用社交账号登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginRight="10dp"
                android:background="#FFE6E6E9"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"></View>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
       <ImageButton
        android:layout_marginRight="15dp"
           android:scaleType="centerInside"
           android:src="@drawable/wechat"
           android:background="#00000000"
           android:layout_width="50dp"
           android:layout_height="50dp" />
            <ImageButton
                android:layout_marginLeft="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/qq"
                android:background="#00000000"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>