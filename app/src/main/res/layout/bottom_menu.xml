<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/baise"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:background="@color/baise"
        android:foreground="@drawable/card_foreground"
        android:id="@+id/home_ll"
        android:clickable="true"
        android:focusable="true"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/home_bn"
            android:src="@drawable/home"
            android:scaleType="centerInside"
            android:layout_width="25dp"
            android:background="#00000000"
            android:clickable="false"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主页"
            android:textColor="#FF5267D9"
            android:layout_gravity="center"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:background="@color/baise"
        android:foreground="@drawable/card_foreground"
        android:id="@+id/mine_ll"
        android:clickable="true"
        android:focusable="true"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/mine_bn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:clickable="false"
            android:scaleType="centerInside"
            android:src="@drawable/chat_black" />
        <TextView
            android:id="@+id/mine_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFBCBBBB"
            android:text="通讯"
            />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:background="@color/baise"
        android:clickable="true"
        android:focusable="true"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/send_ll"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/send_bn"
            android:src="@drawable/add_bottom"
            android:scaleType="centerInside"
            android:layout_width="40dp"
            android:clickable="false"
            android:background="#00000000"
            android:layout_height="40dp" />

    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:background="@color/baise"
        android:foreground="@drawable/card_foreground"
        android:id="@+id/setting_ll"
        android:clickable="true"
        android:focusable="true"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="match_parent"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/setting_bn"
            android:src="@drawable/mmessage"
            android:scaleType="centerInside"
            android:layout_width="30dp"
            android:clickable="false"
            android:background="#00000000"
            android:layout_height="30dp" />
        <TextView

            android:id="@+id/seting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFBCBBBB"
            android:text="通知"
            />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:background="@color/baise"
        android:foreground="@drawable/card_foreground"
        android:id="@+id/topic_ll"
        android:clickable="true"
        android:focusable="true"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center|bottom"
            android:orientation="vertical"
            android:layout_height="50dp">
            <ImageButton
                android:id="@+id/topic_bn"
                android:src="@drawable/buluo_black"
                android:scaleType="centerInside"
                android:layout_width="30dp"
                android:clickable="false"
                android:background="#00000000"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/topic_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFBCBBBB"
                android:text="e汇"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
