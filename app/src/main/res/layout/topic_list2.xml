<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topic_list_ll"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/baise"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.administrator.industrialmessagesbridge.myView.RoundImageView
            android:src="@drawable/warning_circle"
            android:id="@+id/topic_list_image"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/blackaa"
                android:text="北京时间:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/topic_list_time"
                android:text="12.1011"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/topic_money_ll"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/blackaa"
            android:layout_gravity="right"
            android:text="赏金:"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/topic_money"
            android:textSize="17sp"
            android:textColor="@color/red"
            android:layout_gravity="right"
            android:text="1000"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/topic_list_userName"
            android:textColor="@color/wordblue"
            android:text="用户姓名"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/topic_list_content"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text=":这里是话题内容"
            android:textColor="@color/blackaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/topic_list_image_one"
            android:layout_marginRight="10dp"
            android:background="@drawable/text"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <ImageView
            android:id="@+id/topic_list_image_two"
            android:layout_marginRight="10dp"
            android:background="@drawable/text"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <ImageView
            android:id="@+id/topic_list_image_three"
            android:layout_marginRight="10dp"
            android:background="@drawable/text"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </LinearLayout>
</LinearLayout>
